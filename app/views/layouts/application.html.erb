<!DOCTYPE html>
<html>
  <head>
    <title>Animo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <div>
          <a></a>
          <button>
            <span></span>
          </button>
          <div>
            <ul>
              <% if admin_signed_in? %>
              <li>
                <%= link_to "投稿一覧", admin_root_path %>
              </li>
              <li>
                <%= link_to "会員一覧", admin_users_path %>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
              </li>
              <li>
                <%= form_with url: admin_search_path, local: true, method: :get do |f| %>
                  <%= f.text_field :content %>
                  <%= f.select :model, options_for_select({"User" => "user", "Post" => "post"}) %>
                  <%= f.select :method, options_for_select({"完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial"}) %>
                  <%= f.submit "検索" %>
                <% end %>
              </li>
              <li>
                <%= form_with url: tagsearch_path, method: :get, loacl: true do |f| %>
                  <%= f.text_field :content %>
                  <%= f.submit "タグ検索" %>
                <%  end%>
              </li>
              <% elsif user_signed_in? %>
              <!--ここに通知-->
              <li>
                <%= link_to "マイページ", user_path(current_user) %>
              </li>
              <li>
                <%= link_to "投稿一覧", posts_path %>
              </li>
              <li>
                <%= link_to "新規投稿", new_post_path %>
              </li>
             <!--ここにマップ-->
              <li>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
              </li>
              <li>
                <%= form_with url: search_path, local: true, method: :get do |f| %>
                  <%= f.text_field :content %>
                  <%= f.select :model, options_for_select({"User" => "user", "Post" => "post"}) %>
                  <%= f.select :method, options_for_select({"完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial"}) %>
                  <%= f.submit "検索" %>
                <% end %>
              </li>
              <li>
                <%= form_with url: tagsearch_path, method: :get, loacl: true do |f| %>
                  <%= f.text_field :content %>
                  <%= f.submit "タグ検索" %>
                <%  end%>
              </li>
              <% else %>
              <li>
                <%= link_to "About", about_path %>
              </li>
              <li>
                <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post %>
              </li>
              <li>
                <%= link_to "新規登録", new_user_registration_path %>
              </li>
              <li>
                <%= link_to "ログイン", new_user_session_path %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= flash[:notice] %>
    <%= yield %>
  </body>
</html>
