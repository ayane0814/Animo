<div class="container">
    <h2>会員詳細</h2>
    <div class="row">
        <div class="col-4">
            <table>
                <tr>
                    <th class="col-3">会員ID</th>
                    <td class="col-3"><%= @user.id %></td>
                </tr>
                
                <tr>
                    <th class="col-3">氏名</th>
                    <td class="col-3"><%= @user.name %></td>
                </tr>
                
                <tr>
                    <th class="col-3">メールアドレス</th>
                    <td class="col-3"><%= @user.email %></td>
                </tr>
                
                <tr>
                    <th class="col-3">会員ステータス</th>
                    <td class="col-3"><%= @user.status_label %></td>
                </tr>
            </table>
            <div class="ml-5 mt-2"><%= link_to "編集する", edit_admin_user_path(@user), class: "btn-dark rounded p-1 ml-5" %></div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <h2>投稿一覧</h2>
    <div class="tabs d-flex justify-content-left align-items-center">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#published">公開中</a>
            </li>
            <% if @user == current_user %>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#draft">下書き</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#unpublished">非公開</a>
                </li>
            <% end %>
        </ul>
    </div>
    
    <div class="tab-content">
        <div id="published" class="tab-pane fade show active">
            <div class="row mb-2">
                <% @published_posts.each do |post| %>
                    <%= render "public/posts/index", post: post %>
                <% end %>
            </div>
            <div class="d-flex justify-content-center">
                <%= paginate @published_posts %>
            </div>
        </div>
        
        <div id="draft" class="tab-pane fade">
            <div class="row mb-2">
                <% @draft_posts.each do |post| %>
                    <%= render "public/posts/index", post: post %>
                <% end %>
            </div>
            <div class="d-flex justify-content-center">
                <%= paginate @draft_posts %>
            </div>
        </div>
        
        <div id="unpublished" class="tab-pane fade">
            <div class="row mb-2">
                <% @unpublished_posts.each do |post| %>
                    <%= render "public/posts/index", post: post %>
                <% end %>
            </div>
            <div class="d-flex justify-content-center">
                <%= paginate @unpublished_posts %>
            </div>
        </div>
    </div>
</div>

