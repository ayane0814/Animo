<h2>会員情報編集</h2>
<%= form_with model: @user do |f| %>
<table>
    <tr>
        <td>アイコン</td>
        <td>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </td>
    </tr>
    
    <tr>
        <td>名前</td>
        <td><%= f.text_field :name %></td>
    </tr>
    
    <tr>
        <td>メールアドレス</td>
        <td><%= f.email_field :email %></td>
    </tr>
</table>
<%= f.submit "変更保存" %>
<% end %>

<%= link_to "退会する", withdraw_users_path, method: :delete, "data-confirm" => "本当に退会しますか？" %>