<div class="container">
  <div class="row">
    <h2>新規登録</h2>
  </div>
  <div class="row justify-content-center mt-5">
    <div class="col-8 text-center mt-5">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        
        <div class="field">
          <label class="col-4 text-left">ニックネーム</label>
          <%= f.text_field :name %>
        </div>
      
        <div class="field">
          <label class="col-4 text-left">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      
        <div class="field">
          <label class="col-4 text-left">
            パスワード
            <% if @minimum_password_length %>
            <em>(<span class="font-weight-bold"><%= @minimum_password_length %></span> 文字以上)</em>
            <% end %>
          </label>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      
        <div class="field">
          <label class="col-4 text-left">パスワード確認用</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      
        <div class="actions mt-5">
          <%= f.submit "新規登録", class: "btn btn-success col-5" %>
        </div>
      <% end %>
      
      <div class="row text-left">
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>


