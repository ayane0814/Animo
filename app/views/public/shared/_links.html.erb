<div class="col mt-3">
  <%- if controller_name != 'sessions' %>
    <span>ログインは</span><%= link_to "こちら", new_session_path(resource_name), class: "font-weight-bold" %><br />
  <% end %>
  
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <span>新規登録は</span><%= link_to "こちら", new_registration_path(resource_name), class: "font-weight-bold" %><br />
  <% end %>
</div>