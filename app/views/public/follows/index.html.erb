<% @users.each do |user| %>
    <div>
        <%= link_to user.name, user_path(user) %>
        
        <% unless user == current_user %>
            <% if user.following?(current_user, user.id).nil? %>
                <%= link_to 'フォロー', follows_path(follow_id: user.id), method: :post %>
            <% else %>
                <%= link_to 'フォロー解除', follow_path(user.id), method: :delete %>
            <% end %>
        <% end %>
    </div>
<% end %>