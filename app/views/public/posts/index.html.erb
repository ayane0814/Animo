<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1>投稿一覧</h1>
            
            <div class="tab-content">
                <div id="published" class="tab-pane fade show active">
                    <% @published_posts.each do |post| %>
                        <%= render "index", post: post %>
                    <% end %>
                    
                    <%= paginate @published_posts %>
                </div>
            </div>
        </div>
    </div>
</div>