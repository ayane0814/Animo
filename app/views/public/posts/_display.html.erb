<div class="btn-group" role="group" id="buttonGroup">
    <div>
        <% if post.persisted? %>
            <% if post.draft? %>
                <%= f.submit "公開する", id: "publishButton", name: 'published', class: "btn-success" %>
                <%= f.submit "下書き保存", id: "draftButton", name: 'draft', class: "btn-info" %>
            <% elsif post.unpublished? %>
                <%= f.submit "公開する", id: "publishButton", name: 'published', class: "btn-success" %>
                <%= f.submit "非公開にする", id: "unpublishButton", name: 'unpublished', class: "btn-secondary" %>
            <% else %>
                <%= f.submit "公開する", id: "publishButton", name: 'published', class: "btn-success" %>
                <%= f.submit "非公開にする", id: "unpublishButton", name: 'unpublished', class: "btn-secondary" %>
            <% end %>
        <% else %>
            <%= f.submit "公開する", id: "postButton", name: 'postNew', class: "btn-success" %>
            <%= f.submit "下書き保存", id: "draftButton", name: 'draft', class: "btn-info" %>
        <% end %>
    </div>
</div>